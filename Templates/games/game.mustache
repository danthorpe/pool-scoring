
{{#game}}
    
    <h1>
        {{description}}
        {{#foulOnBlack}}
            <span class="win-details">
                (foul on the black)
            </span>
        {{/foulOnBlack}}
    </h1>
    
    <p class="time">
        <time datetime="{{#dateFormatted}}%FT%T%z{{/dateFormatted}}">
            {{#dateFormatted}}%B %d, %Y at %l:%M%P{{/dateFormatted}}
        </time>
    </p>
    
    <h2>Players in this Game</h2>
    
    {{^isTeamGame?}}
        <p>
            <a href="/player/{{#winningPlayers}}{{username}}{{/winningPlayers}}/{{#losingPlayers}}{{username}}{{/losingPlayers}}">
                Compare
                {{#winningPlayers}}{{name}}{{/winningPlayers}}
                with
                {{#losingPlayers}}{{name}}{{/losingPlayers}}
            </a>
        </p>
    {{/isTeamGame?}}
    
    <ul class="container items players">
        
        {{#winningPlayers}}
            
            <li class="half">
                {{> partials/player}}
            </li>
        
        {{/winningPlayers}}
        
        {{#losingPlayers}}
            
            <li class="half">
                {{> partials/player}}
            </li>
        
        {{/losingPlayers}}
        
    </ul>
    
{{/game}}
